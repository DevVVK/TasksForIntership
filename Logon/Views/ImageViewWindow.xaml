<Window x:Class="Logon.Windows.ImageViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logon.Windows"
        mc:Ignorable="d"
        Title="Просмотр фото" Height="239.5" Width="434">

    <Grid Style="{StaticResource StyleGrid}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource StyleBorder}" Margin="5">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
        </Border>

        <Border Grid.Row="0"  Margin="5">
            <Image Name="ImageUser"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Выход" Margin="5" Style="{StaticResource StyleButton}" Width="61" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
