<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Emulator">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BasedStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--Base label style-->
    <Style x:Key="BaseLabelStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource BaseTextStyle}">
        
    </Style>

    <!--Default label style-->
    <Style x:Key="DefaultLabel" TargetType="{x:Type Label}" BasedOn="{StaticResource BaseLabelStyle}">

        <Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
        
    </Style>

    <!--Information label style-->
    <Style x:Key="InformationLabel" TargetType="{x:Type Label}" BasedOn="{StaticResource BaseLabelStyle}">

        <Setter Property="Foreground" Value="{StaticResource LabelInformationColorBrush}"/>

    </Style>

</ResourceDictionary>