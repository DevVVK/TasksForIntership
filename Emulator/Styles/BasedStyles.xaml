<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Robot">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!--Base panel style-->
    <Style x:Key="BasePanelStyle" TargetType="{x:Type Panel}">
        
        <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
        
    </Style>

    <!--Base with text element style-->
    <Style x:Key="BaseTextStyle" TargetType="{x:Type Control}">

        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BorderControlColorBrush}"/>
    
    </Style>

</ResourceDictionary>